@model LoginViewModel
@{ 
    ViewBag.Title = "Login";
}
<div class="row">
    <div class="col-md-6">
        <h3>Notes:</h3>
        <ul>
            <li>ASP.Net Core Identity used behind this login feature</li>
            <li>Test account is seeded on database creation, credentials are: "jay" and "P@ssw0rd!"</li>
            <li>"Remember Me" functionality is enabled</li>
            <li>The Shop action against the StorePage controller (Browse Shop in the nav bar) is the only page that will prompt you to login</li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post">
            <div class="form-group">
                <label asp-for="Username">Username:</label>
                <input asp-for="Username" type="text" class="form-control" name="username" required />
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" class="form-control" name="password" required />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input asp-for="RememberMe" type="checkbox" name="rememberMe" class="checkbox-inline" />
                <label asp-for="RememberMe">Remember Me</label>
            </div>
            <div asp-validation-summary="All"></div>
            <button class="btn btn-success" type="submit">Login</button>
        </form>
    </div>
</div>